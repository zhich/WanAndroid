<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zch.wanandroid">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/PublicAppTheme">

        <meta-data
            android:name="baseUrl"
            android:value="${baseUrl}" />

        <activity
            android:name=".SplashActivity"
            android:theme="@style/PublicAppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".user.login.LoginActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/PublicAppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".user.register.RegisterActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/PublicAppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:theme="@style/PublicAppTheme.NoActionBar" />
    </application>

</manifest>